if [ `uname` = "Linux" ]; then
  /bin/hostname $*
elif [ `uname` = "Darwin" ]; then
  # Apple macintosh have arguments reversed.
  if [ "$*" = "" ]; then
    # Need to explicitely state that we only want the hostname.
    /bin/hostname -s
  else
    /bin/hostname $*
  fi
else
  /bin/hostname
fi
