[ -z "${HD_GIT_DATE_FAKE_OFFSET}" ] && HD_GIT_DATE_FAKE_OFFSET=0
echo -e  "GIT_AUTHOR_DATE     = >>${GIT_AUTHOR_DATE}<< (offset ${HD_GIT_DATE_FAKE_OFFSET} hours) "
echo -e  "GIT_COMMITTER_DATE  = >>${GIT_COMMITTER_DATE}<< (offset ${HD_GIT_DATE_FAKE_OFFSET} hours)"

echo -e "Config:  user.name  = >>$(git config --get user.name)<<"
echo -e "Config:  user.email = >>$(git config --get user.email)<<"
