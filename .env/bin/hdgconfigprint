# ─────────────────────────────────────────────────── Copyright Notice ─

[ -z "${HD_GIT_DATE_FAKE_OFFSET}" ] && HD_GIT_DATE_FAKE_OFFSET=0

cat <<EOM
GIT_AUTHOR_NAME     = >>${GIT_AUTHOR_NAME}<<
GIT_COMMITTER_NAME  = >>${GIT_COMMITTER_NAME}<<
GIT_AUTHOR_EMAIL    = >>${GIT_AUTHOR_EMAIL}<<
GIT_COMMITTER_EMAIL = >>${GIT_COMMITTER_EMAIL}<<
GIT_AUTHOR_DATE     = >>${GIT_AUTHOR_DATE}<< (offset ${HD_GIT_DATE_FAKE_OFFSET} hours)
GIT_COMMITTER_DATE  = >>${GIT_COMMITTER_DATE}<< (offset ${HD_GIT_DATE_FAKE_OFFSET} hours)
EOM

echo -e "Config:  user.name  = >>$(git config --get user.name)<<"
echo -e "Config:  user.email = >>$(git config --get user.email)<<"
