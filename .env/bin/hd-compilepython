import py_compile
import sys
import os
import stat
from hdlib2 import *

debug.setLevel(0)

for file in sys.argv[1:]:
  debug("file = " + file)
  py_compile.compile(file)
  mode=os.stat(file)
  permissions=stat.S_IMODE(mode[stat.ST_MODE])
  debug("permissions = " + '%o' % permissions, 5)
  os.chmod(file + "c", permissions)
