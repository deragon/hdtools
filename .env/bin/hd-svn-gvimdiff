PROGNAME=`basename $0`

if [ $# != 1 ]
then
    echo "Usage: $PROGNAME <file>"
    exit 2
else
    TEMP=/tmp/tmp.$$.`basename $1`
    svn cat $1 > $TEMP
    gvimdiff  -u ${HDVIMRC} --nofork $TEMP $1
    rm -f $TEMP
fi
