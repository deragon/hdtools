export LINES=30
export ROWS=80

LANGUAGE=$1
shift
xterm -wf -geometry ${ROWS}x${LINES} \
  -e aspell --encoding=utf-8 --lang=${LANGUAGE} -c $*
#gnome-terminal --command="aspell --encoding=utf-8 --lang=${LANGUAGE} -c $*"
