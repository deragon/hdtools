# Printing out any valid gateway.
# Works as of 2018-02-24 03:46:26 EST
route -N | \
  egrep -v "^(Kernel|Destination|link-local)" | \
  awk -F " " "{ print \$2 }" | fgrep -v "0.0.0.0"

