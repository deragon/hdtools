IFS="
"
for SARPATH in `find . -name "*.sar"`; do
  NORMALPATH=`perl -e "\\\$_=\"${SARPATH}\";s%\\.sar\$%%g;print"`
  echo "Renaming \"${SARPATH}\" to \"${NORMALPATH}\""
  mv "${SARPATH}" "${NORMALPATH}"
done
