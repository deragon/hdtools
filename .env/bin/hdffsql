# ─────────────────────────────────────────────────── Copyright Notice ─

if [ -r "${1}" ]; then
  DIR="${1}"
  shift
else
  DIR="."
fi

echo "Scanning ${DIR} for "$@""
CMD="find \"${DIR}\" -name '*.sql' -print0 | xargs --null fgrep --color "$@""
echo "${CMD}"
eval ${CMD}
