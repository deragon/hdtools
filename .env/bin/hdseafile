LOGFILE="/tmp/hdseafile.log"

rm -f "${LOGFILE}"  # Need to test if the logfile can be deleted and thus
                    # owned by the current user.

# Some files under the directories below are not readable by the
# current user, thus Seafile cannot copy them.  Rendering them
# readable.
chmod -R u+r /vol/data/base/home/hans/Seafile/Hans-SL/Ordinateurs

nice -n 19 ionice --class Idle seafile-applet >"${LOGFILE}" 2>&1 &
cat <<EOM
Logfile:

  tail -f '${LOGFILE}'
  vim '${LOGFILE}'
  cat '${LOGFILE}'
EOM
