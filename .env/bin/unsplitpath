SEPARATOR=$1
[ -z "${SEPARATOR}" ] && SEPARATOR=":"
# 2nd perl is to remove the extra : appended by the first one.
perl -pe "s/\n$/${SEPARATOR}/g" | perl -pe "s/:$//g"
