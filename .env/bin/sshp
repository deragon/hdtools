import pexpect
import os
import sys

scriptname=os.path.basename(sys.argv[0])

child=pexpect.spawn("ssh localhost", logfile=sys.stdout)

patterns = [
  "Are you sure you want to continue connecting (yes/no)?",
  "Last login:.*",
  "Offending key for IP in.*",
]

# SSH - Connecting args:  -l root sles9sp4
# The authenticity of host 'sles9sp4 (142.133.110.148)' can't be established.
# RSA key fingerprint is c2:0c:85:4b:5c:f3:4d:dd:ad:b4:16:6f:6a:9c:bb:07.
# Are you sure you want to continue connecting (yes/no)? yes
# Warning: Permanently added 'sles9sp4' (RSA) to the list of known hosts.
# Warning: the RSA host key for 'sles9sp4' differs from the key for the IP address '142.133.110.148'
# Offending key for IP in /sp/home/hans/.ssh/known_hosts:51
# Are you sure you want to continue connecting (yes/no)? no
# Host key verification failed.


child.setecho(False)
while True:
  try:
    index = child.expect(patterns)
    if index == 0:
      child.logfile=None  # Disabling echo.
      child.send("yes\n");
      child.logfile=sys.stdout  # Disabling echo.
    elif index == 1:
      child.logfile=None  # Disabling echo.
      child.setecho(True)
      child.interact()
    elif index == 2:
      if os.fork() == 0:
        print("CHILD:  child.match=" + child.match)
        sys.exit(0)
        #sys.exit(command.getstatus("vik " + child.match))

      child.logfile=None  # Disabling echo.
      child.setecho(True)
      child.interact()
  except pexpect.EOF:
    print(scriptname + ":  session ended.")
    sys.exit(0)
  except pexpect.TIMEOUT:
    print(scriptname + ":  session timed out.")
    sys.exit(1)
