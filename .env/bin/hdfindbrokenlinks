SCRIPT_NAME="${0/*\/}" # Basename, efficient form

usage()
{
  cat <<EOM
Usage:  ${SCRIPT_NAME} [-d] [-h]
  -d  Delete

EOM
}

DELETE=0
while getopts "dh" OPTCMD; do
  case "${OPTCMD}" in
    "d")    DELETE=1;;
    "h"|*)  usage; exit 1;;
  esac
done

if (( ${DELETE} )); then
  echo -e "Deleting the following files:\n"
  find . -type l -xtype l -print -exec rm {} \;
else
  find . -type l -xtype l
fi 
