BRIGHTNESS="$1"

if [ -z "${BRIGHTNESS}" ]; then
  echo "You must provide a brightness level between 1 and 15."
  exit 1
fi

for DEVICE in "/sys/class/backlight/acpi_video0/brightness"; do
  if [ -e "${DEVICE}" ]; then
    sudo echo "${BRIGHTNESS}" >"${DEVICE}"
    break
  fi
done
