TIMESTAMP_FORMAT_HUMAN="%y-%m-%d %H:%M:%S"

while ((1)); do
  DATE=`date +"${TIMESTAMP_FORMAT_HUMAN}"`
  TEMP=`nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader`
  echo "${DATE} - Nvidia gpu core temp:  ${TEMP}°C"
  sleep 1
done
