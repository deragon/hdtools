SEPARATOR=$2
[ -z "${SEPARATOR}" ] && SEPARATOR=":"

if [ -z "${1}" ]; then
  echo "Usage:  splitpath <VARNAME> [SEPARATOR]"
else
  echo ${!1} | perl -n -e "\$_=~s/${SEPARATOR}/\n/g;print \$_"
fi
