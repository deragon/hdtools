# Download QRes from:
#
# http://www.softpedia.com/get/Multimedia/Video/Other-VIDEO-Tools/QRes.shtml

ARG=$@

RESOLUTION=`QRes.exe /S | perl -ne 'print if(/^\d+x\d+/)'`

if [ "${ARG}" == "x" ]; then
  echo ${RESOLUTION} | perl -pe 's/^(\d+)x(\d+).*/\1/g'
elif [ "${ARG}" == "y" ]; then
  echo ${RESOLUTION} | perl -pe 's/^(\d+)x(\d+).*/\2/g'
else
  echo ${RESOLUTION} | perl -pe 's/^(\d+x\d+).*/\1/g'
fi
