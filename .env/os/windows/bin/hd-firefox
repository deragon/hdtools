# ─────────────────────────────────────────────────── Copyright Notice ─

unset NEWARGS

echo 1=$1
for ARG in "$*"; do
  echo ARG=$ARG
  if [ -e "${ARG}" ]; then
    ARG=`cygpath -w "${ARG}"`
  fi
  NEWARGS="${NEWARGS} '${ARG}'"
done

# --skip-tilde prevents calling this script again recursively.
FIREFOX_BIN=`which --skip-tilde firefox`
echo "${FIREFOX_BIN}" ${NEWARGS}
eval "'${FIREFOX_BIN}' ${NEWARGS}"
exit $?
